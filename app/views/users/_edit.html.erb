        <div class="form-group">
        <%= f.label "First Choice", class: "control-label" %><br>
        <%= collection_select(:user, :firstChoice, Elective.all, :title, :title) %>
        </div>
        <div class="form-group">
          <%= f.label "Second Choice", class: "control-label" %><br>
          <%= collection_select(:user, :secondChoice, Elective.all, :title, :title) %>
        </div>
        <div class="form-group">
          <%= f.label "Third Choice", class: "control-label" %><br>
          <%= collection_select(:user, :thirdChoice, Elective.all, :title, :title) %>
        </div>
        <div class="form-group">
          <%= f.label "Fourth Choice", class: "control-label" %><br>
          <%= collection_select(:user, :fourthChoice, Elective.all, :title, :title) %>
        </div>
    <% end %>
      <div class="actions">
        <%= f.submit "Update User" %>
      </div>
<% end %>
