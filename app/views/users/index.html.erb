<h1><%= @title %></h1>
<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>1st Choice</th>
      <th>2nd Choice</th>
      <th>3rd Choice</th>
      <th>4th Choice</th>
      <th>Elective #1</th>
      <th>Elective #2</th>
      <th>Admin?</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.firstChoice %></td>
        <td><%= user.secondChoice %></td>
        <td><%= user.thirdChoice %></td>
        <td><%= user.fourthChoice %></td>
        <td><%= user.firstElective %></td>
        <td><%= user.secondElective %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user %> <%= link_to 'Edit', edit_user_path(user) %> <% if user != current_user %> <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<strong>Total Users Created (including admins): </strong><%= User.count %> <br>
