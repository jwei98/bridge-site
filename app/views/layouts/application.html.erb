<!DOCTYPE html>
<html>
<head>
  <title>Bridge Utilities</title>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Bridge Utilities</a>
    </div>
    
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
          <% if current_user.admin? %>
              <li><a href="/users">View Users</a></li>
              <li class="dropdown">
                      <a a class="dropdown-toggle" data-toggle="dropdown" href="#">Translations<span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="/translations?q=my">My Translations</a></li>
                        <li><a href="/translations?q=all">All Translations</a></li>
                      </ul>
              </li>
              <li><a href="/activities">Activities</a></li>
              <li><a rel="nofollow" data-method="delete" href="/users/sign_out"><span class="glyphicon glyphicon-user"></span> Sign Out</a></li>
          <% else %>
              <li><a href="/electives">My Electives</a></li>
              <li><a rel="nofollow" data-method="delete" href="/users/sign_out"><span class="glyphicon glyphicon-user"></span> Sign Out</a></li>
          <% end %>
      <% else %>
          <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <% end %>
    </ul>
  </div>
</nav>
<%= yield %>


</body>
</html>
